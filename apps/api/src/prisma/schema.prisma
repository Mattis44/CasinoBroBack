generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id_user       String   @id
  str_username  String   @unique
  str_email     String?  @unique
  str_password  String?
  bl_admin      Boolean  @default(false)
  date_creation DateTime @default(now())
}
